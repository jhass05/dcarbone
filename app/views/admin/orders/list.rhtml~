<div id="left">
	<h1><%=h @title %></h1>

	<% if @orders.length == 0 then %>
		<!--<h4>No orders have been taken that apply to this view.</h4>-->
		<h4>Ninguna venta se realizo hasta el momento.</h4>
		<div class="padLeft">
			<ul>
			    <li>
				<%= link_to "Flujo de caja", :action => 'flujo_caja' %>        
				<br/>
				     <span class="info">Muesta el reporte de ventas en un rango de fechas.</span>
			    </li>
			    <li>
				<%= link_to "Los productos mas vendidos", :action => 'producto_vendido' %>	
				<br/>
					<span class="info">Muestra el producto mas vendido en un rango de fechas.</span>
				</li>
			
				
			</ul>
		</div>

	<% else %>

		<table class="list" cellpadding="0" cellspacing="0">
			<colgroup>
				<col/>
				<col style="width:70px;"/>
				<col style="width:190px;"/>
				<col style="width:70px;"/>
			</colgroup>
			<tr>
				<th>Order Name / Number</th>
				<th>Date</th>
				<th>Status</th>
				<th>Total</th>
			</tr>
			
                        <% for order in @orders %>
				<tr class="<%= alternate %>">
					<td>
					  <% unless order.name.empty? %>
						  <%= link_to(h(order.name), :action => 'show', :id => order) %>
						<% else %>
						  [Checkout incomplete]
						<% end %>
						<br/>
						<%= link_to(order.order_number, :action => 'show', :id => order) %>
					</td>
					<td><%= order.created_on.strftime("%m/%d/%y %I:%M %p") %></td>
					<td><%= order.status %></td>
					<td class="numeric"><%= sub_number_to_currency(order.total) %></td>
				</tr>
			<% end %>
		</table>

		<!-- DOWNLOAD ORDERS -->
		<p style="margin-top:10px;">
			<%= link_to "Download Orders: XML", 
						{ :action => 'download',
		          :ids => @orders.collect{|o| o.id},
		 					:format => 'xml' }, 
						:class => 'action' 
			%>
			<%= link_to "Download Orders: CSV", 
						{ :action => 'download',
		          :ids => @orders.collect{|o| o.id},
		 					:format => 'csv' }, 
						:class => 'action' 
			%>
		</p>

		<!-- PAGINATION -->
		<%= will_paginate @orders %>

	    <%# render(:partial => '/shared/pagination',
								 :object => @order_pages,
								 :locals => {:params => {:key =>@viewing_by, :term => @search_term} }) %>
    
	<% end %>
</div>


