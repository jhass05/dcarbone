				<%= link_to tag, :controller => 'store', :action => 'show_by_tags', :tags => tag_name_list %>
			<%
				i += 1
				end
			%>
		</h1>
	<% end %>
	
	<%= will_paginate @products %>

	<!-- PRODUCTS LIST -->
	<%= render :partial => 'product', :collection => @products %>

