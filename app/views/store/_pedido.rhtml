<!--INICIO PEDIDO-->
<div id="<%= @id_rand %>">
<table>
	<tr>
		<td style= padding-left:4px;>
			<label class= inline >
		        <span class= money >* <%= @title%> </span>
			</label>
		</td>
		<td style= padding-left:4px> 
		    <label class= inline >
				<span class= money ><%= @price%> </span>
			</label>
		</td>
           
		<td style= padding-left:4px> 
		    <label class= inline >
				<span class= money><%= link_to_remote image_tag('delete.png'),
                                                                      :update => @id_rand,
				                                      :url => {:action => :replacer_pedido}%>
				</span>
			</label>
		</td>
	</tr>
</table>

</div>
<!--FIN PEDIDO-->
